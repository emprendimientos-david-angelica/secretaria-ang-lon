# Configuraci√≥n para base de datos en la nube
# Usar con: source database/config/cloud.env

# Base de datos en la nube
DATABASE_URL=postgresql://username:password@your-cloud-host:5432/secretaria_db

# JWT Configuration
SECRET_KEY=your-cloud-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
MAIL_USERNAME=secretaria.anglon@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=secretaria.anglon@gmail.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Cloud-specific settings
CLOUD_PROVIDER=aws  # aws, gcp, azure, heroku, digitalocean
SSL_REQUIRED=true
CONNECTION_POOL_SIZE=10
MAX_OVERFLOW=20

